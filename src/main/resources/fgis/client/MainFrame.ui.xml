<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.svenjacobs.gwtbootstrap3.client.ui'>

  <ui:style>
    .buttons button {
      margin: 0.5em;
    }

    .labels span {
      margin-right: 5px;
    }
  </ui:style>

  <g:HTMLPanel>
    <span></span>
    <b:Container>

      <b:Navbar position="FIXED_TOP">
        <b:Container>
          <b:NavbarHeader>
            <b:NavbarBrand>FGIS</b:NavbarBrand>
            <b:NavbarText pull="RIGHT" ui:field="connectionField" addStyleNames="connection-status">
              <span ui:field="connectionText">Connected</span>
              <b:Icon ui:field="connectionIcon" type="ARROW_CIRCLE_UP" size="LARGE"/>
            </b:NavbarText>
          </b:NavbarHeader>
          <b:NavTabs>
            <b:ListItem active="true">Live Feed</b:ListItem>
            <b:ListItem>My Team</b:ListItem>
            <b:ListItem>Map Analyzer</b:ListItem>
            <b:ListItem>Recon</b:ListItem>
          </b:NavTabs>
        </b:Container>
      </b:Navbar>
    </b:Container>
  </g:HTMLPanel>


</ui:UiBinder>
