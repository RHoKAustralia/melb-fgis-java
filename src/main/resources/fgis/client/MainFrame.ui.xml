<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:com.svenjacobs.gwtbootstrap3.client.ui'>

  <ui:style>
    .buttons button {
      margin: 0.5em;
    }

    .labels span {
      margin-right: 5px;
    }
  </ui:style>

  <b:Container>

    <b:Navbar position="FIXED_TOP">
      <b:Container>
        <b:NavbarHeader>
          <b:NavbarBrand ui:field="brand">GwtBootstrap3</b:NavbarBrand>
          <b:NavbarCollapseButton target="#navbar-collapse"/>
        </b:NavbarHeader>
        <b:NavbarCollapse styleName="navbar-collapse">
          <b:NavbarNav>
            <b:ListDropDown>
              <b:AnchorButton toggle="DROPDOWN">CSS</b:AnchorButton>
              <b:DropDownMenu>
                <b:ListItem ui:field="gridSystemLink">Grid System</b:ListItem>
              </b:DropDownMenu>
            </b:ListDropDown>
          </b:NavbarNav>
        </b:NavbarCollapse>
      </b:Container>
    </b:Navbar>

    <!-- Container Content -->
    <b:Row ui:field="container" width="100%">
      <b:Jumbotron ui:field="jumbotron">
        <b:Heading size="1">GwtBootstrap3</b:Heading>
        <b:Paragraph>
          A Twitter
          <a href="http://getbootstrap.com/">Bootstrap</a>
          wrapper for
          <a href="http://gwtproject.org/">GWT</a>
        </b:Paragraph>
      </b:Jumbotron>
    </b:Row>

  </b:Container>
</ui:UiBinder>
